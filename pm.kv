<MyScreenManager>:
    football_rss: _football
    hockey_rss: _hockey
    rss_grid: _rss_grid
    FirstScreen:
        name: 'first'
        AnchorLayout:
            anchor_x: 'center'
            anchor_y: 'top'
            BoxLayout:
                orientation: 'vertical'
                Label:
                    text: 'Спортивны новости'
                    font_size: 30
                    size_hint_y: None
                    height: 100
                BoxLayout:
                    # canvas:
                    #     Color:
                    #         rgba: (1, 0, 0, 1)
                    #     Rectangle:
                    #         pos: self.pos
                    #         size: self.size
                    canvas:
                        Rectangle:
                            source: 'football.png'
                            pos: self.x, self.y
                            size: 100, 100
                        Color:
                            rgba: (1, 0, 0, 1)
                    Label:
                        text: 'Футбол'
                        font_size: 30
                        size_hint_y: None
                        height: 50

                    ToggleButton:
                        id: _football
                        text: '+'
                        font_size: 50
                        size_hint: None, None
                        height: 100
                        width: 100
                BoxLayout:
                    canvas:
                        Rectangle:
                            source: 'hockey.png'
                            pos: self.x, self.y
                            size: 100, 100
                        Color:
                            rgba: (1, 0, 0, 1)
                    Label:
                        text:
                            'Хокей'
                        font_size: 30
                        size_hint_y: None
                        height: 100

                    ToggleButton:
                        id: _hockey
                        text: '+'
                        font_size: 50
                        size_hint: None, None
                        height: 100
                        width: 100
                Widget:
        AnchorLayout:
            anchor_x: 'center'
            anchor_y: 'bottom'
            # canvas:
            #     Color:
            #         rgba: (1, 0, 0, 1)
            #     Rectangle:
            #         pos: self.pos
            #         size: self.size
            Button:
                text: 'Продолжить'
                size_hint: (None, None)
                height: 100
                width: 200
                font_size: 30
                # on_release: app.root.current = 'second'
                on_release: root.open_rss()
    SecondScreen:
        name: 'second'
        BoxLayout:
            orientation: 'vertical'
            ScrollView:
                MyGrid:
                    id: _rss_grid
                    size_hint_y: None
                    height: self.minimum_height
                    cols: 2
                    row_default_height: '150dp'
                    row_force_default: True
                    spacing: 5
                    padding: 5
            Button:
                text: "Показать еще"
                font_size: 20
                size_hint: (None, None)
                height: 80
                width: 170
                pos_hint: {'center_x': 0.5, 'y': 0}
                on_release: root.show_more()
