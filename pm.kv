<MyScreenManager>:
    FirstScreen:
        name: 'first'
        AnchorLayout:
            anchor_x: 'center'
            anchor_y: 'top'
            BoxLayout:
                orientation: 'vertical'
                Label:
                    text: 'Спортивны новости'
                    font_size: 30
                    size_hint_y: None
                    height: 100
                BoxLayout:
                    # canvas:
                    #     Color:
                    #         rgba: (1, 0, 0, 1)
                    #     Rectangle:
                    #         pos: self.pos
                    #         size: self.size
                    canvas:
                        Rectangle:
                            source: 'football.png'
                            pos: self.x, self.y
                            size: 100, 100
                        Color:
                            rgba: (1, 0, 0, 1)
                    Label:
                        text: 'Футбол'
                        font_size: 30
                        size_hint_y: None
                        height: 50

                    ToggleButton:
                        id: football
                        text: '+'
                        font_size: 50
                        size_hint: None, None
                        height: 100
                        width: 100
                BoxLayout:
                    canvas:
                        Rectangle:
                            source: 'hockey.png'
                            pos: self.x, self.y
                            size: 100, 100
                        Color:
                            rgba: (1, 0, 0, 1)
                    Label:
                        text:
                            'Хокей'
                        font_size: 30
                        size_hint_y: None
                        height: 100

                    ToggleButton:
                        id: _hockey
                        text: '+'
                        font_size: 50
                        size_hint: None, None
                        height: 100
                        width: 100
                Widget:
        AnchorLayout:
            anchor_x: 'center'
            anchor_y: 'bottom'
            # canvas:
            #     Color:
            #         rgba: (1, 0, 0, 1)
            #     Rectangle:
            #         pos: self.pos
            #         size: self.size
            Button:
                text: 'Продолжить'
                size_hint: (None, None)
                height: 100
                width: 200
                font_size: 30
                on_release: app.root.current = 'second'
    SecondScreen:
        name: 'second'
        hockey: _hockey
        FloatLayout:
            BoxLayout:
                orientation: "horizontal"
                pos_hint: {"x": 0, "y": 0}
                MyGrid:
                    id: grid
                    # rows: 4
                    cols: 2
                    padding: 10
                    spacing: 10
                    row_force_default: True
                    row_default_height: 40
